{
  "name": "ecommerce-performance-tests",
  "version": "1.0.0",
  "description": "Test di performance per l'API e-commerce",
  "main": "index.js",
  "scripts": {
    "test": "jest --json --outputFile=.jest-results.json && node generate-test-report.js",
    "test:watch": "jest --watch",
    "test:load": "jest --testNamePattern=\"Load Test\" --json --outputFile=.jest-results.json && node generate-test-report.js"
  },
  "keywords": [
    "performance",
    "load",
    "benchmark",
    "ecommerce"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "mysql2": "^3.6.3"
  },
  "devDependencies": {
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": ["**/tests/**/*.test.js"],
    "collectCoverage": false,
    "verbose": true,
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
    "testTimeout": 120000,
    "forceExit": true,
    "detectOpenHandles": true,
    "maxWorkers": 4
  }
} 